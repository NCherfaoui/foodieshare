{
  "name": "foodieshare-backend",
  "version": "1.0.0",
  "description": "Backend for FoodieShare recipe sharing platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js && bun run sentry:sourcemaps",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed:env": "cross-env NODE_ENV=development ts-node src/seed.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org nch-fc --project node-express ./dist && sentry-cli sourcemaps upload --org nch-fc --project node-express ./dist",
    "docs": "typedoc --out docs/technical src",
    "postinstall": "node ./node_modules/mongodb-memory-server/postinstall.js"
  },
  "dependencies": {
    "@sentry/cli": "^2.38.1",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^8.36.0",
    "@sentry/profiling-node": "^8.36.0",
    "@tanstack/react-query": "^5.59.19",
    "@types/swagger-ui-express": "^4.1.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "foodieshare-backend": "file:",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "winston": "^3.16.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "artillery": "^2.0.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^7.6.3",
    "prettier": "^2.8.4",
    "react-test-renderer": "^18.3.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.26.11",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.3.3"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.1"
    }
  }
}
